<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_half"
    android:paddingRight="@dimen/padding_half"
    android:paddingTop="@dimen/padding_half">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:paddingBottom="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/category_marker"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/detail_title"
                android:layout_alignTop="@+id/detail_title"
                android:background="@null" />

            <EditText
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:autoLink="all"
                android:background="@null"
                android:hint="@string/title"
                android:inputType="textCapSentences"
                android:paddingBottom="12dp"
                android:paddingEnd="16dp"
                android:paddingLeft="6dp"
                android:paddingRight="16dp"
                android:paddingStart="6dp"
                android:paddingTop="12dp"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_lighter" />

            <RelativeLayout
                android:id="@+id/reward_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_title"
                android:layout_marginStart="7dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/reward_explanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/reward_spinner"
                    android:gravity="center_vertical"
                    android:text="@string/difficulty" />

                <TextView
                    android:id="@+id/reward_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/reward_spinner"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:drawableStart="@drawable/point_icon"
                    android:drawablePadding="3dp"
                    android:paddingBottom="5dp" />

                <Spinner
                    android:id="@+id/reward_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/reward_explanation"
                    android:entries="@array/task_difficulties" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="2dp"
        card_view:cardUseCompatPadding="true">

        <ScrollView
            android:id="@+id/content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="4dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scroll_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/padding_half"
                android:paddingStart="@dimen/padding_half">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="@dimen/padding_half">

                    <EditText
                        android:id="@+id/detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:autoLink="all"
                        android:background="@null"
                        android:hint="@string/content"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textSize="@dimen/text_size_big"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color_lighter" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reminder_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/padding_half"
                    android:paddingStart="@dimen/padding_half"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_alarm_grey600_48dp" />

                    <TextView
                        android:id="@+id/reminder_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_vertical"
                        android:hint="@string/add_reminder"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/creation_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|start"
            android:padding="0dp"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/last_modification_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="0dp"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</LinearLayout>
