<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="25dp">

            <net.fred.taskgame.view.SquareImageView
                android:id="@+id/attachment_thumbnail"
                android:layout_width="@dimen/note_item_min_height_inner"
                android:layout_height="@dimen/note_item_min_height_inner"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="6dp"
                android:layout_toStartOf="@+id/attachment_thumbnail"
                android:singleLine="true"
                android:textAppearance="@style/Text.Big"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_title"
                android:layout_marginStart="11dp"
                android:maxLines="2"
                android:textAppearance="@style/Text.Normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/task_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="3dp"
                android:drawableRight="@drawable/point_icon"
                android:paddingBottom="6dp" />
        </RelativeLayout>

        <View
            android:id="@+id/drag_handle"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:foreground="@drawable/ic_grip" />
    </android.support.v7.widget.CardView>
</FrameLayout>