<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/root"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="2dp"
             android:background="@drawable/bg_card">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <net.fred.taskgame.view.SquareImageView
            android:id="@+id/attachmentThumbnail"
            android:layout_width="@dimen/note_item_min_height_inner"
            android:layout_height="@dimen/note_item_min_height_inner"
            android:contentDescription="@string/task_thumbnail"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginStart="11dp"
            android:textAppearance="@style/Text.Big"
            android:layout_toStartOf="@+id/attachmentThumbnail"/>

        <TextView
            android:id="@+id/note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginStart="11dp"
            android:textAppearance="@style/Text.Normal"
            android:layout_below="@+id/note_title"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/note_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="11dp"
            android:paddingBottom="6dp"
            android:alpha="0.5"
            android:textAppearance="@style/Text.Small"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/note_content"/>

        <ImageView
            android:id="@+id/alarmIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:contentDescription="@string/task_reminder_symbol"
            android:src="@drawable/ic_alarm_grey600_18dp"
            android:layout_marginBottom="6dp"
            android:layout_alignBottom="@+id/note_date"
            android:layout_toEndOf="@+id/note_date"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:id="@+id/category_marker"
        android:layout_width="7dp"
        android:layout_height="match_parent"/>
</FrameLayout>