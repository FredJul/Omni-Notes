<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="212dp">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_background_support" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        tools:src="@drawable/red_potion" />

    <net.fred.taskgame.hero.views.AutoResizeTextView
        android:id="@+id/needed_slots"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:maxLines="1"
        android:shadowColor="@android:color/black"
        android:shadowRadius="7"
        android:textColor="@color/card_text_color"
        app:maxTextSize="15dp"
        app:minTextSize="9dp"
        tools:text="30" />

    <net.fred.taskgame.hero.views.AutoResizeTextView
        android:id="@+id/name"
        android:layout_width="113dp"
        android:layout_height="16dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:shadowColor="@android:color/black"
        android:shadowRadius="7"
        android:textColor="@color/card_text_color"
        app:maxTextSize="12dp"
        app:minTextSize="9dp"
        tools:text="Red potion" />

    <net.fred.taskgame.hero.views.AutoResizeTextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        app:maxTextSize="12dp"
        app:minTextSize="9dp"
        tools:text="Desc with several lines on it" />

</FrameLayout>