<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="card"
            type="net.fred.taskgame.hero.models.Card" />
    </data>

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="212dp">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/card_background_support" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            tools:src="@drawable/red_potion"
            android:src="@{card.iconResId}" />

        <net.fred.taskgame.hero.views.AutoResizeTextView
            android:id="@+id/needed_slots"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowRadius="7"
            android:textColor="@color/card_text_color"
            app:maxTextSize="15dp"
            android:maxLines="1"
            tools:text="30"
            android:text="@{String.valueOf(card.neededSlots)}" />

        <net.fred.taskgame.hero.views.AutoResizeTextView
            android:id="@+id/name"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            android:shadowColor="@android:color/black"
            android:shadowRadius="7"
            android:textColor="@color/card_text_color"
            app:maxTextSize="12dp"
            android:maxLines="2"
            tools:text="Red potion"
            android:text="@{card.name}" />

        <net.fred.taskgame.hero.views.AutoResizeTextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            app:maxTextSize="12dp"
            tools:text="Desc with several lines on it"
            android:text="@{card.desc}" />

    </FrameLayout>
</layout>