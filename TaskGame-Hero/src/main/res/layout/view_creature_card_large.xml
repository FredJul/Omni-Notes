<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="255dp"
    android:layout_height="360dp">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_background_character" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="212dp"
        android:layout_height="212dp"
        android:scaleType="fitXY"
        tools:src="@drawable/skeleton" />

    <net.fred.taskgame.hero.views.AutoResizeTextView
        android:id="@+id/needed_slots"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="7"
        android:textColor="@color/card_text_color"
        app:maxTextSize="25dp"
        app:minTextSize="15dp"
        tools:text="30" />

    <net.fred.taskgame.hero.views.AutoResizeTextView
        android:id="@+id/name"
        android:layout_width="204dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="156dp"
        android:gravity="center|end"
        android:shadowColor="@android:color/black"
        android:shadowRadius="7"
        android:textColor="@color/card_text_color"
        app:maxTextSize="20dp"
        app:minTextSize="15dp"
        tools:text="Skeleton Archer" />

    <net.fred.taskgame.hero.views.AutoResizeTextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="7"
        android:textColor="@color/card_text_color"
        app:maxTextSize="20dp"
        app:minTextSize="15dp"
        tools:text="Desc with several lines on it" />

    <TextView
        android:id="@+id/speciality"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="18dp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="7"
        android:textColor="@color/card_text_color"
        android:textSize="12dp"
        tools:ignore="SpUsage"
        tools:text="Use magic" />

    <net.fred.taskgame.hero.views.AutoResizeTextView
        android:id="@+id/attack"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="7"
        android:textColor="@color/card_text_color"
        app:maxTextSize="20dp"
        app:minTextSize="15dp"
        tools:text="30" />

    <net.fred.taskgame.hero.views.AutoResizeTextView
        android:id="@+id/defense"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="7"
        android:textColor="@color/card_text_color"
        app:maxTextSize="20dp"
        app:minTextSize="15dp"
        tools:text="30" />

</FrameLayout>